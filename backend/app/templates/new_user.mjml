<mjml>
  <mj-head>
    <mj-title>BriefThreat registration</mj-title>
    <mj-attributes>
      <mj-class name="text" font-family="Roboto, sans-serif" color="#b61827"/>
    </mj-attributes>
    <mj-style>
      @media (min-width:480px) {
      	p, ul {
      		font-size: 16px;
      	}
      }
      a {
      	text-decoration: none;
      	color: #0D47A1;
      }
    </mj-style>
  </mj-head>
  <mj-body>
    <mj-section>
      <mj-column>
        <mj-image width="256px" src="{{ url_for('static', filename='logo.svg', _external=True) }}" />

        <mj-divider border-color="#ef5350"></mj-divider>

        <mj-text mj-class="text" css-class="text-scaling">
          <p>Hi {{ user.first_name }},</p>
          <p>Your BriefThreat account has been created (username {{ user.username }}). Before you can login you must set your password, you can do this by clicking the button below.</p>
        </mj-text>

        <mj-button font-family="Roboto, sans-serif" font-size="22px" href="{{ reset_link }}" background-color="#43A047">Set my password</mj-button>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
