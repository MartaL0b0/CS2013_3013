<mjml>
  <mj-head>
    <mj-title>Form no. {{ form.id }}</mj-title>
    <mj-attributes>
      <mj-class name="text" font-family="Roboto, sans-serif" color="#212121"/>
    </mj-attributes>
    <mj-style>
      @media (min-width:480px) {
      	p, ul {
      		font-size: 16px;
      	}
      }
      a {
      	text-decoration: none;
      	color: #0D47A1;
      }
    </mj-style>
  </mj-head>
  <mj-body>
    <mj-section>
      <mj-column>
        <mj-text align="center" css-class="text" font-size="35px">BriefThreat</mj-text>

        <mj-divider border-color="#212121"></mj-divider>

        <mj-text mj-class="text" css-class="text-scaling">
          <p>Hi {{ admin.first_name }},</p>
          <p>{{ form.user.full_name }} (<a href="mailto:{{ form.user.email }}">{{ form.user.email }}</a>) has submitted form no. {{ form.id }}.</p>
          <p>Here are the details:</p>
          <ul>
            <li>Course: {{ form.course }}</li>
            <li>Time: {{ form.time.strftime('%A %d %B at %H:%M (UTC)') }}</li>
            <li>Payment method: {{ form.payment_method.name.capitalize() }}</li>
            <li>Amount: &euro;{{ form.amount }}</li>
            <li>Receipt number: {{ form.receipt }}</li>
          </ul>
        </mj-text>

        <mj-button font-family="Roboto, sans-serif" font-size="22px" href="{{ resolve_link }}" background-color="#43A047">Resolve</mj-button>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
